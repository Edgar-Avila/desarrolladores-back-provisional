generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Post {
  PostID              Int                  @id(map: "PK__Post__AA126038C6245CBE") @default(autoincrement())
  ImageUrl            String?              @db.VarChar(2083)
  PublicationDate     DateTime             @default(now(), map: "DF__Post__Publicatio__26CFC035") @db.DateTime
  Title               String?              @db.VarChar(100)
  Content             String               @db.VarChar(Max)
  UserID              Int
  LanguageID          Int?
  ProgrammingLanguage ProgrammingLanguage? @relation(fields: [LanguageID], references: [LanguageID], onUpdate: NoAction, map: "FK__Post__LanguageID__29AC2CE0")
  User                User                 @relation(fields: [UserID], references: [UserID], onDelete: Cascade, onUpdate: NoAction, map: "FK__Post__UserID__28B808A7")
  Comment             Comment[]
  Like                Like[]
}

model ProgrammingLanguage {
  LanguageID Int    @id(map: "PK__Programm__B938558B49179FB1") @default(autoincrement())
  Name       String @db.VarChar(50)
  Post       Post[]
}

model User {
  UserID            Int       @id(map: "PK__User__1788CCACEE88BBE2") @default(autoincrement())
  Username          String    @unique(map: "UQ__User__536C85E423D03319") @db.VarChar(100)
  ProfilePictureUrl String?   @db.VarChar(2083)
  Password          String    @db.Char(60)
  RefreshToken      String?   @db.Char(60)
  Comment           Comment[]
  Like              Like[]
  Post              Post[]
}

model Like {
  UserID Int
  PostID Int
  Post   Post @relation(fields: [PostID], references: [PostID], onDelete: Cascade, onUpdate: NoAction, map: "FK__Like__PostID__4924D839")
  User   User @relation(fields: [UserID], references: [UserID], onUpdate: NoAction, map: "FK__Like__UserID__4830B400")

  @@id([UserID, PostID], map: "PK__Like__8D29EAAFBE2E6599")
}

model Comment {
  CommentId     Int       @id(map: "PK__Comment__C3B4DFCA3450107B") @default(autoincrement())
  Content       String    @db.VarChar(Max)
  AnsweredID    Int?
  UserID        Int
  PostID        Int
  Comment       Comment?  @relation("CommentToComment", fields: [AnsweredID], references: [CommentId], onDelete: NoAction, onUpdate: NoAction, map: "FK__Comment__Answere__3335971A")
  Post          Post      @relation(fields: [PostID], references: [PostID], onDelete: Cascade, onUpdate: NoAction, map: "FK__Comment__PostID__324172E1")
  User          User      @relation(fields: [UserID], references: [UserID], onUpdate: NoAction, map: "FK__Comment__UserID__314D4EA8")
  other_Comment Comment[] @relation("CommentToComment")
}
